{
  "compilerOptions": {
    "baseUrl": ".",
    // "outDir": "./dist/",
    // "module": "commonjs",
    // "target": "es6",
    // "lib": ["es2015", "dom"],
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "sourceMap": true,
    "allowJs": true,
    "jsx": "react",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "declaration": false,

    "strict": true,

    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedParameters": false,
    "experimentalDecorators": true,
    "preserveConstEnums": true,
    "charset": "utf8",
    "ignoreDeprecations": "5.0",

    "typeRoots": [
      "node_modules/@types",
      "types"
    ],    
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": [
    "src"
  ],
  // "include": ["**/*.ts", "**/*.tsx"],
  "exclude": [
    "node_modules",
    "build",
    "scripts",
    "jest"
  ]
}